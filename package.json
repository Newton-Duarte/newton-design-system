{
  "name": "@newton-design-system/react",
  "version": "1.1.7",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/newton-duarte/newton-design-system.git"
  },
  "bugs": {
    "url": "https://github.com/newton-duarte/newton-design-system/issues"
  },
  "homepage": "https://github.com/newton-duarte/newton-design-system#readme",
  "type": "module",
  "main": "./dist/newton-design-system.cjs",
  "module": "./dist/newton-design-system.mjs",
  "types": "dist/types/index.d.ts",
  "style": "./dist/styles.css",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "style": "./dist/styles.css",
      "import": "./dist/newton-design-system.mjs",
      "require": "./dist/newton-design-system.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "build:types": "tsc",
    "build:all": "vite build && vite build && npm run build:css && tsc",
    "lint": "eslint .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build:css": "postcss src/styles/globals.css -o dist/styles.css",
    "plop": "plop",
    "postplop": "prettier -w './src/components/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@types/node": "^22.14.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^0.12.0",
    "globals": "^15.15.0",
    "plop": "^4.0.1",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "storybook": "^8.6.12",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^3.0.0 || ^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
